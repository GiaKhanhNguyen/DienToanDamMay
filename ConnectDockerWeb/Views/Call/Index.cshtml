
@{ Layout = null;
    string ipconfig = ViewBag.ip;
    string Image = ViewBag.Image;
    string Container = ViewBag.Container; }

<!DOCTYPE html>

<html>
<head style="text-align: center">
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <center>
        <h1 style="font-weight: bold">SỬ DỤNG DOCKER ĐỂ ẢO HÓA UBUNTU</h1>
        <hr />
    </center>
    <div style="width:300px; height:100%;text-align:center; margin-left:180px;float:left">
        <h2>Khởi Động Docker</h2>
        <form action="/Call/Start" method="post">
            <div class="form-group" style="margin-top: 20px">
                <input type="text" name="nameContainer" style="height: 20px" placeholder="Nhập tên container..." />
                <br />
                <br />
                <label>CPUs</label>
                <select name="numberCPUs" style="height: 30px; width: 100px">
                    <option value="1.0">1</option>
                    <option value="2.0">2</option>
                    <option value="3.0">3</option>
                    <option value="4.0">4</option>
                </select>
                <br />
                <br />
                <label>RAMs</label>
                <select name="numberRAMs" style="height: 30px; width: 100px">
                    <option value="1G">1 GB</option>
                    <option value="2G">2 GB</option>
                    <option value="3G">3 GB</option>
                    <option value="4G">4 GB</option>
                </select>
                <br />
                <br />
                <a href="/Call/Start"><input type="submit" class="btn btn-primary" value="Khởi Động" name="start" style="height: 25px; width: 100px" /></a>
            </div>
        </form>
        <br />
        <a href="/Call/Stop"><input type="submit" class="btn btn-primary" value="Tắt container" name="stop" style="height: 25px; width: 100px" /></a>
        @if (ViewBag.Link != null)
        {
            <div class="form-group" style="margin-top: 20px">
                <a href="@ViewBag.Link" target="_blank" class="btn btn-primary">Open Portainer</a>
            </div>
            <div class="form-group" style="margin-top: 20px">
                <a href="/Call/ClosePortainer"><input type="submit" class="btn btn-primary" value="Close Portainer" /></a>
            </div> }
        else
        {
            <div class="form-group" style="margin-top: 20px">
                <a href="/Call/DeployPortainer"><input type="submit" class="btn btn-primary" value="Open Portainer" /></a>
            </div>
        }
        <div class="form-group" style="margin-top:20px">
            <a href="/Call/SeeImage"><input type="submit" class="btn btn-primary" value="Xem thông số" name="stop" style="height: 25px; width: 100px" /></a>
        </div>
        <div class="form-group" style="margin-top:20px">
            <a href="/Call/SeeStats"><input type="submit" class="btn btn-primary" value="Docker stats" name="stop" style="height: 25px; width: 100px" /></a>
        </div>
    </div>
    <div style="width:700px;height:100%;text-align:center;border-left:dashed;float:left">
        <div class="form-group">
            @using (Html.BeginForm("Index", "Call", FormMethod.Post))
            {
                <input type="text" name="code" style="height: 20px" />
                <a href="/Call/Index"><input type="submit" class="btn btn-primary" value="Thực hiện lệnh" style="height: 25px; width: 100px" /></a>
            }
        </div>
        <div class="form-group">
            <center>
                <textarea style="width: 90%; height: 350px">@ipconfig</textarea>
            </center>
        </div>
    </div>
    <div class="clear" style="clear:both"></div>
    <hr />
    <div class="container">
        <div class="row" style="text-align:center;margin-left:20px">
            <div style="width:600px;height:500px;float:left">
                <h2>Các Image đang có của Docker</h2>
                <div class="form-group">
                    <textarea placeholder="Nhấn Xem thông số để biết thêm..." style="width: 600px; height: 400px">@Image</textarea>
                </div>
            </div>
            <div style="width:600px;height:500px;float:left;margin-left:100px">
                <h2>Các Container đang chạy của Docker</h2>
                <div class="form-group">
                    <textarea placeholder="Nhấn Xem thông số để biết thêm..." style="width: 600px; height: 400px">@Container</textarea>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
